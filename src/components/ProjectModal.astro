---
import type { ProjectModalProps } from "../types";

const {
  id,
  title,
  description,
  actionText,
  actionUrl
} = Astro.props as ProjectModalProps;

console.log(actionUrl);
---

<div id={`modal-${id}`} class="modal fixed inset-0 hidden bg-black bg-opacity-80 z-50 items-center justify-center">
  <div class="bg-zinc-900 text-white max-w-lg w-full p-6 rounded-lg shadow-xl relative">
    <button
      class="absolute top-2 right-3 text-xl text-slate-400 hover:text-white"
      data-modal-close
    >âœ•</button>
    <h3 class="text-2xl font-bold mb-4">{title}</h3>
    <p class="text-slate-300 whitespace-pre-line">{description}</p>

    {actionText && actionUrl && (
      <a
        href={actionUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block mt-2 px-4 py-2 mt-6 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded transition"
      >
        {actionText}
      </a>
    )}
  </div>
</div>