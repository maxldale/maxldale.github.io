---
import type { ProjectTileProps } from '../types';
import Badge from './Badge.astro';

const {
  id,
  title,
  synopsis,
  badgeProps = []
} = Astro.props as ProjectTileProps<number>;
---

<div
  data-modal-trigger={id}
  role="button"
  tabindex="0"
  class="group relative flex flex-col justify-between text-left w-full h-full p-4 border border-zinc-700 rounded-xl bg-zinc-800 hover:shadow-xl hover:border-zinc-500 transition duration-200 ease-in-out min-h-[14rem] cursor-pointer"
>
  <div>
    <div class="flex flex-col min-h-[3.5rem] mb-2">
      <h3 class="text-lg font-semibold line-clamp-2 group-hover:underline">{title}</h3>
    </div>
    <p class="text-slate-400 text-sm line-clamp-2">{synopsis}</p>
  </div>

  <div class="mt-auto flex flex-wrap gap-2">
    {badgeProps.map((b) => <Badge {...b} />)}
  </div>
</div>