---
import '../styles/global.css';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import Projects from '../components/Projects.astro';
import ProjectModal from '../components/ProjectModal.astro';
import Contact from '../components/Contact.astro';
import { heroConfig } from '../content/hero';
import { aboutConfig } from '../content/about';
import { projectProps } from '../content/projects';
import { contactData } from '../content/contact';
---

<!DOCTYPE html>
<script src="/js/modal.js" defer></script>
<script src="/js/currentYear.js" is:inline></script>
<script src="/js/headerNavHighlighting.js" is:inline></script>
<html lang="en">
	<head>
    	<meta charset="UTF-8" />
    	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
    	<title>Home | Maxl Dale</title>
  	</head>
  	<body class="bg-zinc-900 text-white">
		<header class="w-full py-4 px-6 text-sm sticky top-0 bg-zinc-900 z-50 shadow-md">
  			<nav class="flex justify-between items-center max-w-7xl mx-auto">
    			<div class="text-xl font-bold">maxldale</div>
    			<div class="space-x-4">
    				<a href="#about" data-nav-target="about" class="hover:underline">About</a>
    				<a href="#projects" data-nav-target="projects" class="hover:underline">Projects</a>
    				<a href="#contact" data-nav-target="contact" class="hover:underline">Contact</a>
    			</div>
  			</nav>
		</header>
    	<Hero {...heroConfig}/>

		<About {...aboutConfig} />

		{projectProps.projects.map((project) => <ProjectModal id={project.id} title={project.title} description={project.description} />)}

		<Projects {...projectProps} />

		<Contact {...contactData} />
  	</body>
  	<footer class="text-center text-slate-500 text-sm py-6 bg-zinc-900">
		© <span id="current-year"></span> Maxl Dale · Built with <a href="https://astro.build" class="underline hover:text-white">Astro</a> and <a href="https://tailwindcss.com" class="underline hover:text-white">Tailwind CSS</a>
	</footer>
</html>